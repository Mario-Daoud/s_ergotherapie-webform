@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    #update-profile-button {
        border: none;
        background-color: red;
        color: white;
    }
</style>

<h4>@ViewData["Title"]</h4>
<hr />
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <img src="@Model.Image"  style="height:100px; width:100px"/>
</div>
<div class="row">
    <div>
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label text-dark"></label>
            </div>
            <br />
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label text-dark"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Input.ProfilePicture" class="form-label text-black"></label>
                <input type="file" asp-for="Input.ProfilePicture" class="form-control" accept="image/jpeg,image/png,image/jpg,image/bmp,image/tiff" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <br />
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
