@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}


<head>
    <title>Forgot password</title>
    <link rel="stylesheet" href="~/css/forgot-password.css" />
</head>


<div class="gen-container">
    <div class="logo-container">
        <img src="~/images/LogoVIVES.png" alt="logo vives" height="100px">
        <img src="~/images/LogoZUYD.png" alt="logo zuyd" height="100px">
    </div>
    <div class="forgot-container">
        <h2>Forgot password</h2>
    </div>
    <div class="form-container">
        <div class="card">
            <section>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <div id="forgot-button">
                        <button id="forgot-submit" type="submit" class="btn btn-lg btn-primary">Reset Password</button>
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
