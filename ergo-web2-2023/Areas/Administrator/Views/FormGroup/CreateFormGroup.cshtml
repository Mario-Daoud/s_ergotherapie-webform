@model ergo_web2_2023.Areas.Administrator.ViewModels.FormGroupVM
<link rel="stylesheet" href="~/css/editAndCreate.css">

@{
    ViewData["Title"] = "CreateFormGroup";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container align-content-center">
    <h1>New Form Group</h1>
    <br />
    <div class="scrollable-container">
        <div class="row">
            <div class="col-4"></div>

            <div class="col-md-4">
                <form asp-action="CreateFormGroup">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="GroupOrder" class="control-label"></label>
                        <input asp-for="GroupOrder" class="form-control" id="GroupOrder"/>
                        <span asp-validation-for="GroupOrder" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        var numberInput = document.getElementById("GroupOrder");

        numberInput.addEventListener("input", function () {
            if (numberInput.value < 1) {
                numberInput.value = 1;
            }
        });
       
    </script>
}
