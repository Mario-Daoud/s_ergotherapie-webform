@model ergo_web2_2023.Areas.Administrator.ViewModels.SubquestionVM
<link rel="stylesheet" href="~/css/editAndCreate.css">

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container align-content-center">
    <h1>Delete this subquestion?</h1>
    <br />
    <div class="scrollable-container">
        <div class="row">
            <div class="col-4"></div>

            <div class="col-md-4">
                     @using (Html.BeginForm("DeleteSubquestion", "Subquestion", new { id = Model.Id }, FormMethod.Post))
                {
                    <div>
                        <label class="control-label">Subquestion Title</label>
                        <input value="@Model.SubQuestionTitle" class="form-control" readonly />
                    </div>
                    <div>
                        <label class="control-label">Question Title</label>
                        <input value="@Model.QuestionTitle" class="form-control" readonly />
                    </div>
                    <div>
                        <label class="control-label">Option Id</label>
                        <input value="@Model.OptionId" class="form-control" readonly />
                    </div>

                    @Html.AntiForgeryToken()
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-danger delete">Delete</button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn cancel" onclick="location.href='@Url.Action("ListAllSubquestions")'">Cancel</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</div>